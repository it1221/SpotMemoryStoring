<ul class="mini-header-menus" id="mini_header_menus">
    <% if @current_user %>
      <li>
        <% if request.path == user_path(@current_user) %>
          <div class="mini-header-link-selected">
            <%=@current_user.name %>
          </div>
        <% else %>
          <%= link_to @current_user.name, user_path(@current_user), class: "mini-header-link" %>
        <% end %>
      </li>
      <li>
        <% if request.path == users_path %>
          <div class="mini-header-link-selected">友達を探す</div>
        <% else %>
          <%= link_to "友達を探す", users_path, class: "mini-header-link" %>
        <% end %>
      </li>
      <li>
        <% if (request.path == new_memory_path) || (request.path == new_spot_path) %>
          <div class="mini-header-link-selected">メモリー作成</div>
        <% else %>
          <%= link_to "メモリー作成", new_spot_path, class: "mini-header-link", id: "new_memory_link" %>
        <% end %>
      </li>
      <li>
        <%= link_to "ログアウト", logout_path, method: :post, class: "mini-header-link", data: { confirm: 'ログアウトしてもよろしいですか？' } %>
      </li>
    <% else %>
      <li>
        <% if request.path == login_path %>
          <div class="mini-header-link-selected">
            ログイン
          </div>
        <% else %>
          <%= link_to "ログイン", login_path, class: "mini-header-link" %>
        <% end %>
      </li>
    <% end %>
  </ul>