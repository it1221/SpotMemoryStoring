<div class="form-group">

  <% unless @user.errors.full_messages.nil? %>
    <% @user.errors.full_messages.each do |msg| %>
      <div class="alert-danger">  * <%= msg %> <br> </div>
    <% end %>
  <% end %>

  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :name, class: "form-label col-sm-3" %>
      <%= f.text_field :name, class: "form form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "form-label col-sm-3" %>
      <%= f.email_field :email, class: "form form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :password, class: "form-label col-sm-3" %>
      <%= f.password_field :password, class: "form form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, class: "form-label col-sm-3" %>
      <%= f.password_field :password_confirmation, class: "form form-control" %>
    </div>
    
    <%= f.submit "登録", class: "btn btn-primary col-sm-3", id: "user_btn" %>
    
  <% end %>

</div>
