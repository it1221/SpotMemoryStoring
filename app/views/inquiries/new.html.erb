<h2>お問い合わせ</h2>
<hr>

<% unless @inquiry.errors.full_messages.nil? %>
  <% @inquiry.errors.full_messages.each do |msg| %>
    <div class="alert-danger">  * <%= msg %> <br> </div>
  <% end %>
<% end %>

<div class="smaller-container">
  <%= form_with model: @inquiry, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :name, class: "form-label col-sm-3" %>
      <%= f.text_field :name, class: "form form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, class: "form-label col-sm-3" %>
      <%= f.text_field :email, class: "form form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :content, class: "form-label col-sm-3" %>
      <%= f.text_area :content, class: "form form-control text-area", rows: 5 %>
    </div>
    <div class="form-group row">
      <%= f.submit "送信", class: "btn btn-primary col-sm-3", id: "inquiry-btn" %>
    </div>
  <% end %>
</div>